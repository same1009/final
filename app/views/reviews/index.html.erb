<h1>My reviews of other recipes</h1>

<table>
  <tr>
    <th>User</th>
    <th>Recipe</th>
    <th>Comments</th>
    <th>Rating</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @myreviews.each do |review| %>
  <tr>
    <td><%= review.user_id %></td>
    <td><%= review.recipe_id %></td>
    <td><%= review.comments %></td>
    <td><%= review.rating %></td>
    <td><%#= link_to 'Show', review %></td>
    <td><%#= link_to 'Edit', edit_review_path(review) %></td>
    <td><%#= link_to 'Destroy', review, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

